{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "isolatedModules": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["**/dist", "**/node_modules"]
}
